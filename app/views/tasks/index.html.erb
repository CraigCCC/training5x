<h1>index</h1>

<%= link_to "新增任務", new_task_path%>

<table>
  <thead>
    <tr>
      <th scope="col">標題</th>
      <th scope="col">狀態</th>
      <th scope="col">優先順序</th>
      <th scope="col">開始時間</th>
      <th scope="col">結束時間</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <% @tasks.each do |task| %>
    <tbody>
      <tr>
        <td  scope="col"><%= task.title %></td>
        <td><%= task.status %></td>
        <td><%= task.priority %></td>
        <td><%= task.start_at %></td>
        <td><%= task.end_at %></td>
        <td>
          <%= link_to "查看", task_path(task) %>
          <%= link_to "編輯", edit_task_path(task) %>
          <%= link_to "刪除", task_path(task), method: :delete, data: { confirm: "確定刪除？" } %>
        </td>
      </tr>
    </tbody>
  <% end %>
</table>