<header class="row my-2">
  <h1>
    <%= @task.title %>
    <div class="btn-group">
      <%= link_to t("tasks.links.edit"), edit_task_path(@task), class: 'btn btn-outline-primary' %>
      <%= link_to t("tasks.links.delete"), task_path(@task), method: :delete, data: { confirm: I18n.t("tasks.links.delete") }, class: 'btn btn-outline-danger' %>
      <%= link_to t("tasks.links.root_page"), tasks_path, class: 'btn btn-outline-secondary' %>
    </div>
  </h1>
</header>

<section class="row mb-3">
  <table class="table table-hover table-striped text-center">
    <thead>
    </thead>
    <tbody>
      <tr>
        <td><%= t("tasks.start_at") %></td>
        <td><%= @task.start_at %></td>
      </tr>
      <tr>
        <td><%= t("tasks.end_at") %></td>
        <td><%= @task.end_at %></td>
      </tr>
      <tr>
        <td><%= t("tasks.status.title") %></td>
        <td><%= t("tasks.status.#{@task.status}") %></td>
      </tr>
      <tr>
        <td><%= t("tasks.priority.title") %></td>
        <td><%= t("tasks.priority.#{@task.priority}") %></td>
      </tr>
      <tr>
        <td><%= t("tasks.content") %></td>
        <td><%= @task.content %></td>
      </tr>
  
