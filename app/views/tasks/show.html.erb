<h1>Show</h1>
<h3><%= @task.title %></h3>
<table>
  <thead>
  </thead>
  <tbody>
    <tr>
      <td>開始時間</td>
      <td><%= @task.start_at %></td>
    </tr>
    <tr>
      <td>結束時間</td>
      <td><%= @task.end_at %></td>
    </tr>
    <tr>
      <td>任務狀態</td>
      <td><%= @task.status %></td>
    </tr>
    <tr>
      <td>優先順序</td>
      <td><%= @task.priority %></td>
    </tr>
    <tr>
      <td>內容</td>
      <td><%= @task.content %></td>
    </tr>
    <tr>
      <td>標籤</td>
      <td></td>
    </tr>
  </tbody>
  <tfoot>
    <tr>
      <td>
        <%= link_to "編輯", edit_task_path(@task) %>
        <%= link_to "刪除", task_path(@task), method: :delete, data: { confirm: "確定刪除？" } %>
        <%= link_to "回首頁", tasks_path %>
      </td>
    </tr>
  </tfoot>
</table>